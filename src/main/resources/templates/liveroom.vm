<!DOCTYPE html>
<html>
<head>
#parse("head.vm")
<title>直播来了 - $liveRoom.name - $liveRoom.title</title>
</head>
<body>
    #parse("nav.vm")

    <div id="banner" class="container"></div>

    <div class="container">
        <div class="row zb-info">
            <div class="pull-left">
                <img class="zb-avatar" alt="$liveRoom.name" src="$liveRoom.avatar">
            </div>
            <div class="pull-left" style="margin-left: 15px;">
                <p class="zb-title">$liveRoom.title</p>
                <p class="zb-name">主播：$liveRoom.name</p>
            </div>
            <div class="pull-right">
                <a href="$liveRoom.actor.liveUrl" style="font-size: 16px; height: 60x; line-height: 60px; padding-right: 10px;">去$liveRoom.actor.platform.name观看</a>
            </div>
        </div>
        <div class="row" id="plugin">
            #if ($liveRoom.actor.platform.abbr == 'zhanqi')
            <iframe width="100%" height="100%" src="$liveRoom.flashUrl" frameborder="0" allowfullscreen="false"></iframe>
            #elseif ($liveRoom.actor.platform.abbr == 'longzhu')
            <object type="application/x-shockwave-flash" id="BFPlayerID" name="BFPlayerID" align="middle" data="http://imgcache.qq.com/minivideo_v1/vd/res/TencentPlayerLive.swf?max_age=86400&amp;v=20141201" width="100%" height="100%">
                <param name="quality" value="high">
                <param name="bgcolor" value="#828282">
                <param name="allowscriptaccess" value="always">
                <param name="wmode" value="opaque">
                <param name="allowfullscreen" value="true">
                <param name="flashvars" value="vid=$liveRoom.liveId&vurl=http://zb.v.qq.com:1863/?progid=$liveRoom.liveId…sv=2.0&showcfg=1&share=1&full=1&autoplay=1&scale=full&p=true">
            </object>
            #else
            <embed style="display: none;" width="640" height="360" allownetworking="all" allowscriptaccess="always" src="$liveRoom.flashUrl" quality="high" bgcolor="#000" wmode="window" allowfullscreen="true" allowFullScreenInteractive="true" type="application/x-shockwave-flash">
            #end
        </div>
        <div class="row">
            <div class="page-header">
                <h4>主播介绍</h4>
            </div>
            <p>
                $liveRoom.description
            </p>
        </div>
    </div>
    
    #parse("footer.vm")
    <script type="text/javascript">
    $(function() {
        var plugin = $("#plugin");
        #if ($liveRoom.actor.platform.abbr == 'zhanqi')
        plugin.find("iframe").width(plugin.width()).height(plugin.width() * 9 / 16).show();
        #elseif ($liveRoom.actor.platform.abbr == 'longzhu')
        plugin.find("object").width(plugin.width()).height(plugin.width() * 9 / 16).show();
        #else
        plugin.find("embed").width(plugin.width()).height(plugin.width() * 9 / 16).show();
        #end
    });
    </script>
</body>
</html>