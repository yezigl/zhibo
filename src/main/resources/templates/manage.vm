<!DOCTYPE html>
<html>
<head>
#parse("head.vm")
<title>管理</title>
</head>
<body>
<div class="container">
    <form action="/man/platforms" method="post" class="col-md-4 col-lg-4">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="名字">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="abbr" placeholder="英文简称">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="url" placeholder="网站主页">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="host" placeholder="Host">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="icon" placeholder="网站icon">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="logo" placeholder="网站logo">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="sharePattern" placeholder="分享地址">
        </div>
        <div class="form-group">
            <input type="checkbox" name="linkProtect" value="true"> 防盗链
        </div>
        <button type="submit" class="btn btn-default">添加平台</button>
    </form>
</div>
    <br>
<div class="container">
    <form action="/man/games" method="post" class="col-md-4 col-lg-4">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="名字">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="abbr" placeholder="英文简称">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="alias" placeholder="别名">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="icon" placeholder="图标">
        </div>
        <button type="submit" class="btn btn-default">添加游戏</button>
    </form>
</div>
<br>
<div class="container">
    <form action="/man/platformgames" method="post" class="col-md-4 col-lg-4">
        <div class="form-group">
            <select name="platform" class="form-control">
            #foreach ($platform as $platforms)
                <option value="$platform.abbr">$platform.name</option>
            #end
            </select>
        </div>
        <div class="form-group">
            <select name="game" class="form-control">
                #foreach ($game as $games)
                <option value="$game.abbr">$game.name</option>
            #end
            </select>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="platformUrl" placeholder="平台地址">
        </div>
        <button type="submit" class="btn btn-default">添加平台游戏</button>
    </form>
</div>
</body>
</html>